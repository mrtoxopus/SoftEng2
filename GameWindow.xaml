<Window x:Class="SoftEng2.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftEng2"
        mc:Ignorable="d"
        Title="GameWindow" Height="900" Width="800">
    <Canvas x:Name="MyCanvas"
            Focusable="True"
            Background="Black"
            KeyDown="OnKeyDown"
            KeyUp="OnKeyUp">
        <Rectangle x:Name="Player"
                   Height="50"
                   Width="80"
                   Fill="Orange"
                   Canvas.Left="370"
                   Canvas.Top="805"/>
        <Label x:Name="LabelScore"
               Content="Score: 0"
               Foreground="White"
               FontSize="18"
               FontWeight="Bold"/>
        <Label x:Name="LabelDamage"
               Content="Damage: 0"
               Foreground="White"
               FontSize="18"
               FontWeight="Bold"
               Canvas.Top="34"/>
    </Canvas>
</Window>
